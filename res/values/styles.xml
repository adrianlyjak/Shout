<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ShoutTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ShoutActionBar</item>
        <item name="android:actionMenuTextAppearance">@style/ShoutActionBar.MenuItem</item>
        <item name="android:titleTextStyle">@style/ShoutActionBar.Title</item>
    </style>

    <style name="ShoutActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
<!--         <item name="android:background">#00FFFF</item> -->
    </style>

    <style name="Separator">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="ShoutActionBar.MenuItem" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/holo_orange_light</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ShoutActionBar.Title" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:text"></item>
        <item name="android:textSize">6sp</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Image.SessionInfo">
        <item name="android:paddingRight">4dp</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

    <style name="SessionInfoBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">#99000000</item>
        <item name="android:padding">3dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Text.SessionInfo">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Text.SessionInfo.ShoutRadius">
        <item name="android:paddingLeft">3dp</item>
    </style>

    <style name="SpeechTriangleContainer">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SpeechTriangle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="SpeechTriangle.Left">
        <item name="android:src">@drawable/speech_triangle_left</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="SpeechTriangle.Right">
        <item name="android:src">@drawable/speech_triangle_right</item>
    </style>

    <style name="ChatMessageContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="Text.ChatMessageDatetime">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#888888</item>
        <!-- <item name="android:textAlignment">center</item> -->
        <item name="android:background">#FFFFFF</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="ChatMessageDescriptionContainer">
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ChatMessageDescriptionContainer.Left">
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="ChatMessageDescriptionContainer.Right">
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="Text.ChatMessageDescription">
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="ChatMessageInfoRow">
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="IconShoutRadiusSmall">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:src">@drawable/ic_shout_silhouette_nm</item>
        <item name="android:contentDescription">@string/ic_shout_small</item>
    </style>

    <style name="Text.ChatMessageInfo">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="Text.ChatMessageInfo.Distance">
        <item name="android:textSize">16dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
    </style>

    <style name="Text.ChatMessageInfo.ShoutRadius">
        <item name="android:textSize">14dp</item>
    </style>

</resources>